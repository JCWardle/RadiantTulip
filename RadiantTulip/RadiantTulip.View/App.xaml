<Application x:Class="RadiantTulip.View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:RadiantTulip.View.Converters"
             >
    <Application.Resources>
        <converters:SingleSelect x:Key="singleSelectConverter"/>
        <converters:MultipleSelect x:Key="multipleSelectConverter"/>
        <converters:GroupSelect x:Key="groupSelectConverter"/>
        <converters:IsSelected x:Key="isSelected"/>
        <converters:SelectedColour x:Key="selectedColour"/>
        <converters:SelectedSize x:Key="selectedSize"/>
        <converters:AffectSelected x:Key="affectSelected"/>
        <converters:BoolToVisibility x:Key="boolToVisibility"/>
        <converters:SelectedShape x:Key="selectedShape"/>
        <converters:InvertBoolean x:Key="invertBooleanConverter"/>
        <converters:TabCreator x:Key="tabCreatorConverter"/>
        <converters:InvertBoolToVisibility x:Key="invertBoolToVisibilityConverter"/>
        <converters:SelectedVisibility x:Key="selectedVisibilityConverter"/>
        <converters:PlayerDistance x:Key="distanceCoveredConverter"/>
    </Application.Resources>
</Application>
